{
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vscodevimrc",
    // Vim bindings that are bound to vscode actions
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            // Read Find File
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            // Read Find Grep
            "before": [
                "<leader>",
                "f",
                "g"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            // Read Find Symbol
            "before": [
                "<leader>",
                "f",
                "s"
            ],
            "commands": [
                "workbench.action.showAllSymbols"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "r"
            ],
            "commands": [
                "workbench.action.replaceInFiles"
            ]
        },
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "g",
                "D"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            // Read Knowledge
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        // Read open file Explorer
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        // Read Diagnostics next. Jump to the next problem
        {
            "before": [
                "[",
                "d"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        // Read Diagnostics previous. Jump to the previous problem
        {
            "before": [
                "]",
                "d"
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        },
        // Read Change next. Jump to the next version control change
        {
            "before": [
                "]",
                "c"
            ],
            "commands": [
                "workbench.action.editor.nextChange"
            ]
        },
        // Read Change previous. Jump to the next version control change
        {
            "before": [
                "[",
                "c"
            ],
            "commands": [
                "workbench.action.editor.previousChange"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            // Read Generate Comment
            "before": [
                "<leader>",
                "g",
                "c"
            ],
            "commands": [
                "editor.action.commentLine",
                "extension.vim_escape"
            ]
        },
        {
            // Move selection down a line
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ],
            "when": "editorHasSelection && textInputFocus && !editorReadOnly"
        },
        {
            // Move selection up a line
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ],
            "when": "editorHasSelection && textInputFocus && !editorReadOnly"
        }
    ],
    // Vim settings
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        }
    ]
}
